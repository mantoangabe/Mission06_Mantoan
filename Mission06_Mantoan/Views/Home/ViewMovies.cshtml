@model List<Movie>
@{
    ViewData["Title"] = "View Movies";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Movie Collection</h4>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        <th class="ps-4">Title</th>
                        <th>Category</th>
                        <th>Year</th>
                        <th>Director</th>
                        <th>Rating</th>
                        <th>Edited</th>
                        <th>Lent To</th>
                        <th>Plex</th>
                        <th class="pe-4">Notes</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td class="fw-semibold ps-4">@m.Title</td>
                            <td class="text-muted">@m.Category?.CategoryName</td>
                            <td>@m.Year</td>
                            <td>@m.Director</td>
                            <td>
                                <span class="badge bg-dark">
                                    @m.Rating
                                </span>
                            </td>
                            <td>
                                @if (m.Edited)
                                {
                                    <span class="badge bg-dark">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-dark">No</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(m.LentTo))
                                {
                                    <span class="text-body">@m.LentTo</span>
                                }
                                else
                                {
                                    <span class="text-muted small">—</span>
                                }
                            </td>
                            <td>
                                @if (m.CopiedToPlex)
                                {
                                    <span class="badge bg-dark">Yes</span>
                                }
                                else
                                {
                                    <span class="text-muted small">—</span>
                                }
                            </td>
                            <td class="pe-4">
                                @if (!string.IsNullOrEmpty(m.Notes))
                                {
                                    <span class="text-muted small">@m.Notes</span>
                                }
                                else
                                {
                                    <span class="text-muted small">—</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@m.MovieId"
                                   class="btn btn-sm btn-outline-dark me-2"
                                   title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <form asp-action="Delete"
                                      asp-route-id="@m.MovieId"
                                      method="post"
                                      style="display:inline;"
                                      onsubmit="return confirm('Are you sure you want to delete this movie?');">

                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger"
                                            title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>