@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row align-items-center justify-content-center g-4">
        <div class="col-lg-6 text-center text-lg-start">
            <h1 class="display-4 fw-bold mb-3">The Joel Hilton Film Collection</h1>
            <p class="lead text-muted mb-4">
                A curated collection of films worth owning—tracked, organized, and easy to share.
            </p>

            <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center justify-content-lg-start">
                <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="GetToKnow">
                    Get to Know Joel
                </a>
                <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="AddMovie">
                    Enter a Film
                </a>
            </div>
        </div>

        <div class="col-lg-5 text-center">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <img src="JoelHiltonHeadshot.jpg"
                         class="img-fluid rounded shadow-sm"
                         alt="Photo of Joel Hilton" />
                </div>
            </div>
            <small class="text-muted d-block mt-2">Click around to explore the collection.</small>
        </div>
    </div>
</div>