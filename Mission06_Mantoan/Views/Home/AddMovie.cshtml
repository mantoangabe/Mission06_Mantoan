@model Movie1
@{
    ViewData["Title"] = "Add Film";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Enter a Movie1!</h1>
        <p class="lead">Enter a movie to be reviewed by me!</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="Category">Category:</label>
                    <input class="form-control" asp-for="Category" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Title">Movie1 Name:</label>
                    <input class="form-control" asp-for="Title" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="ReleaseYear">Release Year:</label>
                    <input class="form-control" type="number" asp-for="ReleaseYear" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Director">Director:</label>
                    <input class="form-control" asp-for="Director" required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="rating" asp-for="Rating">Rating:</label>
                    <select class="form-select" asp-for="Rating" required>
                        <option value="">--Select--</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                </div>

                <label asp-for="Edited" class="form-label">Edited</label>
                <select asp-for="Edited" class="form-select">
                    <option value="">-- Select --</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>


                <div class="mb-3">
                    <label class="form-label" asp-for="LentTo">Lent to:</label>
                    <input class="form-control" asp-for="LentTo"/>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Notes">Notes (Max 25 characters):</label>
                    <textarea class="form-control" maxlength="25" rows="2" asp-for="Notes"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Add Movie1</button>
            </form>
        </div>
    </div>
</div>